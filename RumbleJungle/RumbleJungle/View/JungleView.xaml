<Window x:Class="RumbleJungle.View.JungleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RumbleJungle.View"
        mc:Ignorable="d"
        Title="JungleView"
        Height="450"
        Width="800"
        DataContext="{Binding JungleInstance, Mode=OneWay, Source={StaticResource Locator}}">
    <ItemsControl ItemsSource="{Binding JungleObjects}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Background="Green"
                             Rows="{Binding JungleHeight}"
                             Columns="{Binding JungleWidth}" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemContainerStyle>
            <Style>
                <Setter Property="Grid.Row"
                        Value="{Binding JungleRow}" />
                <Setter Property="Grid.Column"
                        Value="{Binding JungleColumn}" />
            </Style>
        </ItemsControl.ItemContainerStyle>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Name}"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</Window>
