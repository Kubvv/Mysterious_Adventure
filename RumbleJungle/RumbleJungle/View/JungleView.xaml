<Window x:Class="RumbleJungle.View.JungleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RumbleJungle.View"
        mc:Ignorable="d"
        Title="JungleView"
        Height="800"
        Width="1600"
        DataContext="{Binding JungleInstance, Mode=OneWay, Source={StaticResource Locator}}">
    <ItemsControl ItemsSource="{Binding JungleObjectsViewModel}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Background="Green"
                             Rows="{Binding JungleHeight}"
                             Columns="{Binding JungleWidth}" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontWeight="Bold" />
                    <TextBlock Text="{Binding Coordinates}"
                               Foreground="White"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</Window>
