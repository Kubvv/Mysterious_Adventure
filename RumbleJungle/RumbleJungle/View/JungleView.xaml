<Window x:Class="RumbleJungle.View.JungleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RumbleJungle.View"
        mc:Ignorable="d"
        Title="JungleView"
        Height="800"
        Width="1600"
        DataContext="{Binding JungleInstance, Mode=OneWay, Source={StaticResource Locator}}"
        MinWidth="200"
        MinHeight="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ItemsControl x:Name="jungle"
                      ItemsSource="{Binding JungleObjectsViewModel}"
                      SizeChanged="Jungle_SizeChanged">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Background="Green" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Background="{x:Null}"
                            Command="{Binding MoveRamblerCommand, Mode=OneWay}"
                            Margin="{Binding Margin, Mode=OneWay}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="{Binding JungleInstance.CellWidth, Source={StaticResource Locator}}"
                            Height="{Binding JungleInstance.CellHeight, Source={StaticResource Locator}}">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding Coordinates}"
                                       Foreground="White"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Border Background="Blue"
                Margin="{Binding RamblerViewModel.Margin, Mode=OneWay}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="{Binding CellWidth}"
                Height="{Binding CellHeight}">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="{Binding RamblerViewModel.Name}"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding RamblerViewModel.Coordinates}"
                           Foreground="White"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
        <local:StatusBar Grid.Row="1" />
    </Grid>
</Window>
